<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="git_wiki.repository.class">Git\WikiBundle\Model\PageRepository</parameter>
        <parameter key="git_wiki.repository.dir">%kernel.root_dir%/wiki</parameter>
        <parameter key="git_wiki.repository.debug">false</parameter>
        <parameter key="git_wiki.repository.executable">/usr/local/bin/git</parameter>
    </parameters>

    <services>
        <service id="git_wiki.repository" class="%git_wiki.repository.class%">
          <argument>%git_wiki.repository.dir%</argument>
          <argument>%git_wiki.repository.debug%</argument>
          <argument type="collection">
            <argument key="git_executable">%git_wiki.repository.executable%</argument>
          </argument>
        </service>
    </services>
</container>
