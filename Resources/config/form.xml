<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="git_wiki.form.edition.class">Git\WikiBundle\Form\EditionForm</parameter>
        <parameter key="git_wiki.form.edition.name">git_wiki_edition</parameter>
        <parameter key="git_wiki.form.edition.validation_groups" type="collection">
            <parameter>Edition</parameter>
            <parameter>GitUser</parameter>
        </parameter>
    </parameters>

    <services>

        <service id="git_wiki.form.edition" factory-method="create" factory-class="%git_wiki.form.edition.class%" class="%git_wiki.form.edition.class%">
            <argument type="service" id="form.context" />
            <argument>%git_wiki.form.edition.name%</argument>
            <argument type="collection">
                <argument key="validation_groups">%git_wiki.form.edition.validation_groups%</argument>
            </argument>
        </service>

    </services>

</container>
