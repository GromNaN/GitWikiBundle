<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="git_wiki.filter.raw_text" class="Git\WikiBundle\Filter\RawTextFilter">
            <call method="setExtensions">
                <argument type="collection">
                    <argument></argument>
                    <argument>txt</argument>
                    <argument>raw</argument>
                </argument>
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <tag name="kernel.listener" event="%git_wiki.filter.event_name%" method="filter" priority="0" />
        </service>
    </services>

</container>
